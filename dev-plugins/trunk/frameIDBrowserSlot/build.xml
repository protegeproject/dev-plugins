<?xml version = "1.0" encoding = "utf-8"?>
<project name = "Developer Plugins" default = "compile" basedir = ".">    
   <property name = "src" value = "./src"/>  
   <property name = "classes" value = "./classes"/>  
   <property name = "plugins" value = "../plugins"/>
   <property name = "lib" value = "../lib"/>
   <property name = "browserId_plugin_dist" value = "edu.stanford.protege.ui.browserid"/>
   <property name = "plugin_name" value = "browserId_plugin"/>
	
   <path id = "project.classpath">    
     <pathelement location = "${lib}/protege.jar"/>
   </path>

   <target name = "init">
     <mkdir dir = "${classes}"/>
     <mkdir dir = "${plugins}"/>
     <mkdir dir = "${plugins}/${browserId_plugin_dist}"/>
   </target>  


   <target name = "compile" depends = "init">    
     <javac srcdir = "${src}" 
            destdir = "${classes}" debug="on">
       <classpath refid = "project.classpath"/>    
     </javac>
   </target>

   <target name = "jar" depends = "compile">
     <jar jarfile = "${plugins}/${browserId_plugin_dist}/browserId-plugin.jar" 
          basedir = "${classes}" 
          manifest = "${src}/META-INF/MANIFEST.MF"/> 
   </target>

   <target name = "dist" depends = "jar">
     <zip basedir = "${plugins}"
          includes = "${browserId_plugin_dist}/**"
          destfile = "${plugins}/${plugin_name}.zip"/>
   </target>

   <target name = "install" depends = "dist">
      <fail message = "set the protege.dir variable to do an install">
         <condition>
            <not>
               <and>
                  <isset property="protege.dir"/>
                  <available file="${protege.dir}"
                             type="dir"/>
               </and>
            </not>
         </condition>
      </fail>
      <unzip src="${plugins}/${plugin_name}.zip" 
             dest = "${protege.dir}/plugins"
             overwrite = "true"/>
   </target>


   <target name = "clean">
     <delete dir = "${plugins}"/>
     <delete dir = "${classes}"/>
   </target>



</project>
